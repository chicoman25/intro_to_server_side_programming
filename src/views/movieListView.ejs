<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/head'); %>
</head>

<body>

    <!-- Navigation -->
    <%- include('partials/nav'); %>

    <!-- Page Content -->
    <div class="container">

        <div class="row">
            <div class="col-lg-12 text-center">
                <h1>Movies</h1>
                <p class="lead"></p>
                <table class="table">
                    <% for (var i = 0; i < movies.length; i++){ %>
                    <tr>
                        <td><a href="/movies/<%=i%>"><%= movies[i].title %></a></td>
                        <td>
                            <form method="POST" action="/movies/<%= i %>?_method=delete" enctype="application/x-www-form-urlencoded">
                                <input type="submit" value="Delete" class="btn btn-danger" />
                            </form>
                        </td>
                    </tr>
                    <% } %>
                </table>
            </div>
        </div>
        <!-- /.row -->

        <div class="row">
            <div class="col-lg-12 text-center">
                <h1>Add a new movie to your collection</h1>
                <p class="lead">Add movies to your collection!</p>
                <form method="POST" action="/movies">
                    <input type="text" name="title">
                    <input type="text" name="year">
                    <input type="submit">
                </form> 
            </div>
        </div>
    </div>
    <!-- /.container -->

    <!-- jQuery Version 1.11.1 -->
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

</body>

</html>
